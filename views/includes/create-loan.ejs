<div class="create-loan-wrapper">
    <h2>Get Instant Loan !!</h2>
    <form action="/loans/" method="post">
        <div class="type-wrapper">
            <label for="type">Type</label>
            <input type="text" id="type" name="type" required>
        </div>
        <div class="amout-wrapper">
            <label for="amount">Amount</label>
            <input type="number" id="amount" name="amount" min="100" max="50000" required >
        </div>
        <div class="term-wrapper">
            <label for="term" title="week">Term</label>
            <input type="number" id="term" name="term" min="1" max="100" required>
        </div>
        <div class="submit-btn">
            <button type="submit">Proceed</button>
        </div>
    </form>
</div>